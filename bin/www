#!/usr/bin/env node

/**
 * Module dependencies.
 */
// check if process was started with --require @babel/register and load development module
var appModule = process.execArgv.indexOf('ts-node/register')>=0 ? '../server/server' : '../dist/server/server';
var app = require(appModule);
// get port
var port = process.env.PORT || '3000';
// get bind ip address
var ip = process.env.IP || '127.0.0.1';

app.start({
  port: port,
  bind: ip
});


